{
  "productName": "Edge Hive",
  "version": "0.1.0",
  "identifier": "com.zksprotocol.edgehive",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Edge Hive - ZKS Protocol",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "transparent": false,
        "maximized": false,
        "visible": true,
        "decorations": true,
        "alwaysOnTop": false,
        "contentProtected": false,
        "center": true,
        "closable": true,
        "minimizable": true,
        "maximizable": true,
        "url": "../index.html"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {}
}